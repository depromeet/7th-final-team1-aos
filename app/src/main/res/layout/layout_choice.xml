<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/layout_choice_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:text="참치회" />

    <ImageView
        android:id="@+id/layout_choice_cb_checked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_choice_tv_name"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:id="@+id/layout_choice_ll_person_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/layout_choice_iv_person"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/layout_choice_tv_person_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="82" />
    </LinearLayout>

</RelativeLayout>